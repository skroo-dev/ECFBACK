{% extends 'base.html.twig' %}

{% block title %}
	{{produit.id}}
{% endblock %}

{% block body %}


	<div class="container">
		<h1 class="text-center mt-5">{{ produit.nom }}</h1>
		<div class="row mt-5">
			<img src="{{produit.image}}" class="img-fluid image-produit" alt="photo produit">
			<div class="card" style="width: 50rem;">
				<div class="card-body">
					<h5 class="card-title">{{produit.nom}}</h5>
					<h6 class="card-subtitle mt-2 mb-2 text-muted">reference :
						{{produit.reference}}</h6>
					<p class="card-text">{{produit.descriptionLongue}}</p>
                    <p class="card-text"><strong>{{produit.tarif}} â‚¬</strong></p>
					<br>
					<h3>Ajouter au panier</h3>
					<form method="post">
						<div class="row my-3">
                            <input type="number" name="quantite" class="form-control" id="quantity" value="1">
